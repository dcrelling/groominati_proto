  <div ng-controller="HomeCtrl">         <!-- this div contains a form for uploaing posts -->
  <!--
    <ul>
      <li ng-repeat="post in posts">
        {{post.id}}, {{post.content}}, {{post.asset}}
      </li>
    </ul>
